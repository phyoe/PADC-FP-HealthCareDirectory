<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="HealthCareCardView">
        <item name="android:background">@color/white_full</item>
    </style>

    <style name="PrimaryTitle" parent="HealthCareCardView">
        <item name="android:textSize">@dimen/text_regular_2x</item>
        <item name="android:textColor">@color/text_black_ish</item>
    </style>

    <style name="SecondaryTitle" parent="HealthCareCardView">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/primary_bright</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

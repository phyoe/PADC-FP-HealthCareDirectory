<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.padc.healthcaredirectory.activities.HospitalDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_medium"
        android:orientation="vertical"
        tools:context="com.padc.healthcaredirectory.activities.HospitalDetailActivity">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="@dimen/card_elevation"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.padc.healthcaredirectory.components.MMTextView
                    android:id="@+id/tv_service_name"
                    style="@style/PrimaryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"
                    android:padding="@dimen/margin_medium"
                    android:text="@string/health_care_hospital" />

                <com.padc.healthcaredirectory.components.MMTextView
                    android:id="@+id/tv_service_category"
                    style="@style/SecondaryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_service_name"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:padding="@dimen/margin_medium"
                    android:text="@string/health_care_hospital_category" />

                <com.padc.healthcaredirectory.components.MMTextView
                    android:id="@+id/tv_price_category"
                    style="@style/PriceCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_service_category"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:padding="@dimen/margin_medium"
                    android:text="@string/health_care_price_category" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            card_view:cardElevation="@dimen/card_elevation"
            card_view:cardUseCompatPadding="true">

            <include
                layout="@layout/inc_service_detail_info_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            card_view:cardElevation="@dimen/card_elevation"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_medium"
                android:orientation="vertical">

                <!-- Operation title -->
                <com.padc.healthcaredirectory.components.MMTextView
                    style="@style/DetailInfoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_medium"
                    android:text="@string/str_operation_label" />

                <!-- Body -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_small">

                    <com.padc.healthcaredirectory.components.MMTextView
                        android:id="@+id/tv_service_operations"
                        style="@style/ContentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="@string/dummy_opearations" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--
        <com.padc.healthcaredirectory.components.DynamicHeightImageView
            android:id="@+id/img_service_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/no_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/dummpy_map" />
        -->

    </LinearLayout>
</ScrollView>
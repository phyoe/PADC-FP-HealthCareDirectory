<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        style="@style/HealthCareCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/no_margin">

        <ImageView
            android:id="@+id/iv_healthcare"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:layout_margin="@dimen/no_margin"
            android:layout_marginTop="@dimen/margin_medium"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/asia_royal_hospital" />

        <com.padc.healthcaredirectory.components.MMTextView
            android:id="@+id/tv_name"
            style="@style/PrimaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/margin_medium"
            android:text="@string/health_care_hospital"
            android:textAppearance="?android:textAppearanceLarge" />

        <com.padc.healthcaredirectory.components.MMTextView
            android:id="@+id/tv_category"
            style="@style/SecondaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/margin_medium"
            android:text="@string/health_care_hospital_category"
            android:textAppearance="?android:textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_small">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/ic_location_24dp"
                android:tint="@color/black_overlay" />

            <com.padc.healthcaredirectory.components.MMTextView
                android:id="@+id/tv_address"
                style="@style/ContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/dummy_address" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_small">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_24dp"
                android:tint="@color/black_overlay" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/ContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/dummy_phone_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_medium">

            <com.padc.healthcaredirectory.components.MMButton
                android:id="@+id/btn_phone_call"
                style="@style/HealthCareCardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/lbl_phone" />

            <com.padc.healthcaredirectory.components.MMButton
                android:id="@+id/btn_detail"
                style="@style/HealthCareCardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/lbl_detail" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
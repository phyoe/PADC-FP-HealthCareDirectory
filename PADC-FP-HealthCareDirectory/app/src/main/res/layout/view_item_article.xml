<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        style="@style/HealthCareCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_medium_1"
        android:paddingTop="@dimen/margin_medium_1">

        <!-- Start : Header -->
        <com.padc.healthcaredirectory.components.CircleImageView
            android:id="@+id/iv_author"
            android:layout_width="@dimen/icon_image_size"
            android:layout_height="@dimen/icon_image_size"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:elevation="4dp"
            android:src="@drawable/drtintswe"
            app:civ_border_color="@color/dark"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_author"
            android:orientation="vertical">

            <com.padc.healthcaredirectory.components.MMTextView
                android:id="@+id/tv_author_name"
                style="@style/SecondaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_author"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_toRightOf="@+id/iv_author"
                android:text="@string/dummy_author"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <com.padc.healthcaredirectory.components.MMTextView
                android:id="@+id/tv_article_date"
                style="@style/ArticleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_author_name"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_toRightOf="@+id/iv_author"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/dummy_date"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        </LinearLayout>
        <!-- End : Header -->

        <!-- Body : Title -->
        <com.padc.healthcaredirectory.components.MMTextView
            android:id="@+id/tv_article_title"
            style="@style/ArticleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/dummy_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_article_title"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:weightSum="3">

            <!-- Body Left : Desp -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.padc.healthcaredirectory.components.MMTextView
                    android:id="@+id/tv_article_description"
                    style="@style/ContentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_author"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_small"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:text="@string/dummy_description"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </LinearLayout>
            <!-- Body Right : Image -->
            <ImageView
                android:id="@+id/iv_article"
                android:layout_width="128dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/article_img" />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/body"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/line_color" />

        <!-- Start : Footer -->
        <com.padc.healthcaredirectory.components.MMTextView
            android:id="@+id/tv_article_link"
            style="@style/LinkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/str_readmore" />
        <!-- End : Footer -->
    </RelativeLayout>
</android.support.v7.widget.CardView>
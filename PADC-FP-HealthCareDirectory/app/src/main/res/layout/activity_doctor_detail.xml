<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.padc.healthcaredirectory.activities.DoctorDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <!--
            <com.padc.healthcaredirectory.components.MMTextView
                android:id="@+id/tv_screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/article_screen_title"
                android:textColor="@color/white_full"
                android:textSize="@dimen/screen_title_size" />
            -->

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_large"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <RelativeLayout
                    style="@style/HealthCareCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_medium_1">

                    <ImageView
                        android:id="@+id/img_doctor"
                        android:layout_width="@dimen/icon_detail_image_size"
                        android:layout_height="@dimen/icon_detail_image_size"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="@dimen/margin_medium_2"
                        android:elevation="4dp"
                        android:src="@drawable/dummy_doctor" />

                    <com.padc.healthcaredirectory.components.MMTextView
                        android:id="@+id/tv_doctor_name"
                        style="@style/PrimaryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img_doctor"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_toRightOf="@+id/img_doctor"
                        android:text="@string/dummy_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <com.padc.healthcaredirectory.components.MMTextView
                        android:id="@+id/tv_doctor_qualifications"
                        style="@style/ContentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_doctor_name"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_toRightOf="@id/img_doctor"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="@string/dummy_qualifications"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <ImageView
                        android:id="@+id/ic_share"
                        android:layout_width="@dimen/icon_share_size"
                        android:layout_height="@dimen/icon_share_size"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_doctor_name"
                        android:layout_margin="@dimen/margin_medium"
                        android:clickable="true"
                        android:src="@drawable/ic_share_24dp"
                        android:tint="@color/accent" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <include
                    layout="@layout/inc_doctor_hospital_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <include
                    layout="@layout/inc_doctor_clinic_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_small">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_email_24dp" />

                        <TextView
                            android:id="@+id/tv_doctor_email"
                            style="@style/LinkText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_medium_2"
                            android:text="@string/dummy_email" />

                    </LinearLayout>

                    <!-- Website -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_small">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_website_24dp" />

                        <TextView
                            android:id="@+id/tv_doctor_website"
                            style="@style/LinkText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_medium_2"
                            android:text="@string/dummy_website" />

                    </LinearLayout>

                    <!-- Facebook -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size"
                            android:layout_height="@dimen/icon_size"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_facebook_24dp" />

                        <TextView
                            android:id="@+id/tv_doctor_facebook"
                            style="@style/LinkText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_medium_2"
                            android:text="@string/dummy_facebook" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.padc.healthcaredirectory.fragments.SearchFragment">

    <com.padc.healthcaredirectory.components.MMEditText
        android:id="@+id/txtSearch"
        android:textSize="@dimen/text_regular"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_height="wrap_content"
        android:hint="ရွာေဖြလိုုေသာနာမည္ကိုုေရးပါ …" />
    
    <com.padc.healthcaredirectory.components.MMButton
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ရွာေဖြပါ"/>

    <com.padc.healthcaredirectory.components.MMTextView
        android:textSize="@dimen/text_regular_3x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:padding="@dimen/margin_large"
        android:gravity="center_horizontal"
        android:text="သင္ရွာေဖြလိုုေသာ ေဆးရံုု ၊ ေဆးခန္း ၊ ေဆးဆိုုင္၏နာမည္ျဖင့္ ရွာေဖြႏုုိင္ပါသည္"/>

</LinearLayout>
